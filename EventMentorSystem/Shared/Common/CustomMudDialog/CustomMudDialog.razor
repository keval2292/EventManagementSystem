<MudDialog>
    <TitleContent>
        @if (TitleContent != null)
        {
            @TitleContent
        }
    </TitleContent>
    <DialogContent>
        @if (DialogContent != null)
        {
            @DialogContent
        }
    </DialogContent>
    <DialogActions>
        @if (DialogActions != null)
        {
            @DialogActions
        }
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public RenderFragment TitleContent { get; set; }
    [Parameter]
    public RenderFragment DialogContent { get; set; }
    [Parameter]
    public RenderFragment DialogActions { get; set; }
}
